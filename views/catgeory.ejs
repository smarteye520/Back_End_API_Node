<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/header.ejs', {title: "Color Now App | Home"}); %>
    </head>
<style>
svg{
    width: 100%;
}
</style>
    <body class="animsition">
        <div class="page-wrapper">
            <%- include('partials/navbar.ejs'); %>
            <!-- PAGE CONTAINER-->
            <div class="page-container">
                <div class="page-header text-center">
                <br />
                <br />
                    <h1>Categories</h1>
                </div>
                <!-- MAIN CONTENT-->
                <div class="main-content">
                    <div class="section__content section__content--p30">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="table-data__tool">
                                    <div class="table-data__tool-left">
                                    </div>
                                    <div class="table-data__tool-right">
                                        <button class="au-btn au-btn-icon au-btn--green au-btn--small"  data-toggle="modal" data-target="#mediumModal">
                                            <i class="zmdi zmdi-plus"></i>add category</button>
                                    </div>
                                </div>
                                <div class="table-responsive table-responsive-data2">
                                    <table class="table table-data2 table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th style="color: white;">Name</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="spacer"></tr>
                                            <% data.forEach(function(category){ %>
                                                <tr class="tr-shadow">
                                                    <td>
                                                        <span class="block-email"><%= category.name %></span>
                                                    </td>
                                                    <td>
                                                        <div class="table-data-feature">
                                                            <button class="item" data-toggle="tooltip" data-id="<%= category.id %>" data-placement="top" title="" data-original-title="Edit">
                                                                <i class="zmdi zmdi-edit"></i>
                                                            </button>
                                                            <a class="item" href="/delete-category/<%= category.id %>">
                                                                <i class="zmdi zmdi-delete"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr class="spacer"></tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END MAIN CONTENT-->
            </div>
            <!-- END PAGE CONTAINER-->
        </div>
        <div class="modal fade" id="mediumModal" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" style="display: none;" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="mediumModalLabel">Add Category</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>
                    <form action="/add-category" method="Post">
                        <div class="modal-body">
                            <div class="form-group">
                                <input type="text" name="name" class="form-control" required placeholder="Category name" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <%- include('partials/pre_footer.ejs'); %>
    </body>
</html>